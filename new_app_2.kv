#: import SwapTransition kivy.uix.screenmanager.SwapTransition
#: import RiseInTransition kivy.uix.screenmanager.RiseInTransition
#: import SlideTransition kivy.uix.screenmanager.SlideTransition


<CustomizeScreen@MDBoxLayout>:
    orientation:'vertical'
    text:''
    padding: 20
    MDLabel:
        text:root.text
        halign: 'center'
        pos_hint: {'center':0.5}
    MDIconButton:
        icon: 'arrow-left'
        text: 'Back'
        pos_hint: {'center':0.3}
        on_release:
            app.root.current = 'Main_Screen_1'
            app.root.transition = SlideTransition(direction='left')

<UI>
    transition: SwapTransition()
    MDScreen:
        name: 'Main_Screen'
        md_bg_color: 0, 0.5, 0.5, 1
        MDBoxLayout:
            orientation: 'vertical'
            MDBoxLayout:
                size_hint: 1, 0.2
                padding: '10dp'

                MDCard:
                    radius: '10dp'
                    padding:'10dp'
                    line_color:0.6, 0, 0.5, 0.5

                    MDFloatingActionButton:
                        icon: 'account'
                        pos_hint: {'center_x':0, 'center_y':0.5}
                        #md_bg_color ='#FF5A1E'
                        on_release:
                            app.root.current = 'login'
                            app.root.transition = SlideTransition(direction='left')

                    MDLabel:
                        text: 'TOOLS STORE'
                        font_size: 30
                        bold: True
                        halign:'center'
                        pos_hint: {'center_y':0.5}
                    #MDSwitch:
                        #pos_hint: {'center_y':0.5}
                        #active: True
                        #on_active:
                            #app.change_style(*args)

    MDScreen:
        name : 'login'
        md_bg_color : 0, 0, 0, 1
        MDBoxLayout:
            orientation : 'vertical'
            spacing: '10dp'
            padding: '30dp'

            MDBoxLayout:
                orientation : 'vertical'
                size_hint_y: 0.3

                Image:
                    source:'image/logo.PNG'
                    pos_hint: {'center_x':0.5}


                MDLabel:
                    text: 'Asu Group'
                    halign: 'center'
                    color: '#FF5A1E'
                    font_size: '28dp'
                    bold: True
                    pos_hint:{'center_y':0.5}
            MDBoxLayout:
                orientation: 'vertical'
                size_hint_y: 0.3
                spacing: '12dp'
                MDTextField:
                    id: user
                    hint_text: 'username'
                    icon_right: 'account'
                    font_size: '28dp'
                    icon_right_color: '#FF5A1E'
                    pos_hint: {'center_x':0.5}
                MDTextField:
                    id: password
                    password: True
                    icon_right: 'key'
                    icon_right_color: '#FF5A1E'
                    hint_text: 'password'
                    font_size: '28dp'
                    pos_hint: {'center_x':0.5}

                MDLabel:
                    id: signal_login
                    text: ''
                    halign: 'center'
                    color: '#FF5A1E'
                    font_size: '15dp'

            MDBoxLayout:
                orientation: 'vertical'
                size_hint_y: 0.4
                spacing: '15dp'
                MDFillRoundFlatButton:
                    id:bt_login
                    text: 'login'
                    font_size: '20dp'
                    pos_hint: {'center_x':0.5}
                    on_release:
                        x = app.data_login()
                        root.current = 'Main_Screen_1' if x == True else None
                MDFillRoundFlatButton:
                    md_bg_color: '#000000'
                    text_color: 255/255, 90/255, 30/255, 1
                    text: 'Create an account'
                    font_size: '28dp'
                    pos_hint: {'center_x':0.5}
                    on_release:
                        root.current = 'screen_register'
    MDScreen:
        name: 'Main_Screen_1'
        md_bg_color: 0, 0.5, 0.5, 1
        MDBoxLayout:
            orientation: 'vertical'
            MDBoxLayout:
                size_hint: 1, 0.2
                padding: '10dp'

                MDCard:
                    radius: '10dp'
                    padding:'10dp'
                    line_color:0.6, 0, 0.5, 0.5

                    MDFloatingActionButton:
                        icon: 'home'
                        pos_hint: {'center_x':0, 'center_y':0.5}
                        #md_bg_color ='#FF5A1E'
                        on_release:
                            #app.root.data_logout()
                            app.root.current = 'Main_Screen'
                            app.root.transition = SlideTransition(direction='left')



                    MDLabel:
                        text: 'TOOLS STORE'
                        font_size: 30
                        bold: True
                        halign:'center'
                        pos_hint: {'center_y':0.5}
                    MDSwitch:
                        pos_hint: {'center_y':0.5}
                        active: True
                        on_active:

                            app.change_style(*args)

            MDGridLayout:
                cols:3
                size_hint: 1, 0.8
                padding:['10dp', '10dp', '10dp', '10dp']
                spacing:'10dp'

                MDCard:
                    radius: '10dp'
                    spacing: '10dp'
                    on_release:
                        root.current = 'screen_1'
                    ripple_behavior: True
                    MDBoxLayout:
                        orientation: 'vertical'
                        padding: ['5dp', '5dp', '5dp', '5dp']
                        Image:
                            source: 'image/vent.PNG'
                        MDBoxLayout:
                            orientation: 'vertical'
                            MDLabel:
                                text: 'VENT'
                                bold: True
                                halign: 'center'
                            MDLabel:
                                text: 'Ventilation and cooling'
                                halign: 'center'
                                italic: True

                MDCard:
                    radius: '10dp'
                    spacing: '10dp'
                    on_release:
                        root.current = 'screen_2'
                    MDBoxLayout:
                        orientation: 'vertical'
                        padding: ['5dp', '5dp', '5dp', '5dp']
                        Image:
                            source: 'image/machine.PNG'
                        MDBoxLayout:
                            orientation: 'vertical'
                            MDLabel:
                                text: 'MACHINE'
                                bold: True
                                halign: 'center'
                            MDLabel:
                                text: 'Machineries & Engeneering'
                                halign: 'center'
                                italic: True


                MDCard:
                    radius: '10dp'
                    spacing: '10dp'
                    on_release:
                        root.current = 'screen_3'
                    MDBoxLayout:
                        orientation: 'vertical'
                        padding: ['5dp', '5dp', '5dp', '5dp']
                        Image:
                            source: 'image/equipment.PNG'
                        MDBoxLayout:
                            orientation: 'vertical'
                            MDLabel:
                                text: 'EQUIPMENT'
                                bold: True
                                halign: 'center'
                            MDLabel:
                                text: 'Tools & equipments'
                                halign: 'center'
                                italic: True
                MDCard:
                    radius: '10dp'
                    spacing: '10dp'
                    on_release:
                        root.current = 'screen_4'
                    MDBoxLayout:
                        orientation: 'vertical'
                        padding: ['5dp', '5dp', '5dp', '5dp']
                        Image:
                            source: 'image/filter.PNG'
                        MDBoxLayout:
                            orientation: 'vertical'
                            MDLabel:
                                text: 'FILTRATION'
                                bold: True
                                halign: 'center'
                            MDLabel:
                                text: 'Cooling & air filtration'
                                halign: 'center'
                                italic: True
                MDCard:
                    radius: '10dp'
                    spacing: '10dp'
                    on_release:
                        root.current = 'screen_5'
                    MDBoxLayout:
                        orientation: 'vertical'
                        padding: ['5dp', '5dp', '5dp', '5dp']
                        Image:
                            source: 'image/wc.PNG'
                        MDBoxLayout:
                            orientation: 'vertical'
                            MDLabel:
                                text: 'CANALISATION'
                                bold: True
                                halign: 'center'
                            MDLabel:
                                text: 'Water closet and sinks'
                                halign: 'center'
                                italic: True

                MDCard:
                    radius: '10dp'
                    spacing: '10dp'
                    on_release:
                        root.current = 'screen_6'
                    MDBoxLayout:
                        orientation: 'vertical'
                        padding: ['5dp', '5dp', '5dp', '5dp']
                        Image:
                            source: 'image/protection.PNG'
                        MDBoxLayout:
                            orientation: 'vertical'
                            MDLabel:
                                text: 'PROTECTION'
                                bold: True
                                halign: 'center'
                            MDLabel:
                                text: 'Individual protection and fire protection'
                                halign: 'center'
                                italic: True

    MDScreen:
        name: 'screen_register'
        md_bg_color: 0, 0, 0, 1

        MDBoxLayout:
            orientation: 'vertical'
            padding: '12dp'
            spacing: '12dp'

            MDBoxLayout:
                orientation: 'horizontal'
                size_hint: 1, 0.2

                MDFloatingActionButton:
                    icon:'arrow-left'
                    pos_hint: {'center_y':0.5}
                    on_release:
                        root.current = 'login'
                        app.clear_signal()

                MDLabel:
                    text:'Create an account'
                    halign: 'center'
                    color: '#FF5A1E'
                    font_size: '28dp'
                    bold: True
                    pos_hint: {'center_y':0.5}

            MDBoxLayout:
                orientation: 'vertical'
                size_hint: 1, 0.7

                MDLabel:
                    text: 'Login name'
                    halign: 'center'
                    color:'#FF5A1E'
                MDTextField:
                    id: new_user
                    hint_text: 'username'
                    icon_right: 'account'
                    font_size: '20dp'
                    icon_right_color: '#FF5A1E'
                    pos_hint: {'center_y':0.5}
                MDLabel:
                    text: 'Tape a password'
                    halign: 'center'
                    color:'#FF5A1E'
                    font_size: '20dp'

                MDTextField:
                    id: new_password
                    password: True
                    hint_text: 'password'
                    icon_right: 'key'
                    font_size: '20dp'
                    icon_right_color: '#FF5A1E'
                    pos_hint: {'center_y':0.5}

                MDLabel:
                    text: 'Confirm password'
                    halign: 'center'
                    color:'#FF5A1E'
                    font_size: '20dp'

                MDTextField:
                    id: new_password_two
                    password: True
                    hint_text: 'password'
                    icon_right: 'key'
                    font_size: '20dp'
                    icon_right_color: '#FF5A1E'
                    pos_hint: {'center_y':0.5}

            MDBoxLayout:
                orientation: 'vertical'
                size_hint: 1, 0.3

                MDLabel:
                    id:signal_register
                    text:''
                    halign: 'center'
                    color: '#FF5A1E'
                    font_size: '15dp'

                MDFillRoundFlatButton:
                    id: bt_register
                    text: 'Registration'
                    font_size: '28dp'
                    pos_hint: {'center_x':0.5, 'y':0.5}
                    on_release: app.register_data()

    MDScreen:
        name: 'screen_1'
        CustomizeScreen:
            text:'page 1'
    MDScreen:
        name: 'screen_2'
        CustomizeScreen:
            text:'page 2'

    MDScreen:
        name: 'screen_3'
        CustomizeScreen:
            text:'page 3'

    MDScreen:
        name: 'screen_4'
        CustomizeScreen:
            text:'page 4'
    MDScreen:
        name: 'screen_5'
        CustomizeScreen:
            text:'page 5'

    MDScreen:
        name: 'screen_6'
        CustomizeScreen:
            text:'page 6'





















